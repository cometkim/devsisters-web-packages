{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": ["*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
