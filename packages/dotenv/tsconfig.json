{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "outDir": ".",
    "rootDir": "src",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "downlevelIteration": true,
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
